<div class="col-sm-3">
	<div class="col-item">
		<div class="photo">
			<img {{bind-attr src="view.content.SpImg"}} class="img-responsive" alt="a" />
		</div>
		<div class="info">
			<div class="row">
				<div class="price col-md-6">
					<h5>
						{{view.content.SpName}}</h5>
					<h5 class="price-text-color">
						{{view.content.SpPrice}}</h5>
				</div>
				<div class="rating hidden-sm col-md-6">
					<i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
					</i><i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
					</i><i class="fa fa-star"></i>
				</div>
			</div>
			<div class="separator clear-left">
				<p class="btn-add">
					<i class="fa fa-shopping-cart"></i><a href="#" class="hidden-sm">Adauga in cos</a></p>
				<p class="btn-details">
					<i class="fa fa-list"></i>{{#link-to "product" view.content.SpLink class="hidden-sm"}}Detalii produs{{/link-to}}</p>
			</div>
			<div class="clearfix">
			</div>
		</div>
	</div>
</div>
