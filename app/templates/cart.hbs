<h1>Coșul tău de cumpărături</h1>

<form {{action "update" on="change"}}>
	<table id="cart" class="table table-hover table-condensed">
			<thead>
				<tr>
					<th style="width:50%">Produs</th>
					<th style="width:15%">Pret</th>
					<th style="width:8%">Cantitate</th>
					<th style="width:25%" class="text-center">Subtotal</th>
					<th style="width:10%"></th>
				</tr>
			</thead>
			<tbody>

			{{#each model.cartItems.content}}
				<tr>
					<td data-th="Product">
						<div class="row">
							<div class="col-sm-2 hidden-xs">
							<img {{bind-attr src=img}}/>
							</div>
							<div class="col-sm-10">
								<!-- <h4 class="nomargin">{{name}}</h4> -->
								<p>{{name}}</p>
							</div>
						</div>
					</td>
					<td data-th="Price">{{price}} Lei</td>
					<td data-th="Quantity">
						{{input type="number" class="form-control text-center" value=qty}}
					</td>
					<td data-th="Subtotal" class="text-center">{{get-subtotal this}}</td>
					<td class="actions" data-th="">
						<!-- <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button> -->
						<button {{action "delete" this.id}} class="btn btn-danger btn-sm"}}><i class="fa fa-trash-o"></i></button>
					</td>
				</tr>
			{{/each}}
			</tbody>
			<tfoot>
				<tr class="visible-xs">
					<td class="text-center"><strong>Total 1.99</strong></td>
				</tr>
				<tr>
					<td>{{#link-to 'index' class="btn btn-warning"}}<i class="fa fa-angle-left"></i> Continuă cumpărăturile{{/link-to}}</td>
					<td colspan="2" class="hidden-xs"></td>
					<td class="hidden-xs text-center"><strong>Total {{totalCounter}} Lei</strong></td>
					<td><a href="#" class="btn btn-success btn-block">Lansează comanda <i class="fa fa-angle-right"></i></a></td>
				</tr>
			</tfoot>
	</table>
</form>

