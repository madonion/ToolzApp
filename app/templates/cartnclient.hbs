<div id="cartnclient" class="col-md-3">
{{#if session.isAuthenticated}}  
  <div id="buttons" class="btn-group btn-xl btn-group-justified">
    <div class="btn-group">
      <button type="button" class="btn btn-default" {{action 'contulMeu'}}><span class="glyphicon glyphicon-user"></span><span> Bine ai venit,<br><strong>{{user.customer_first_name}}</strong></span> </button>
    </div>
    <div class="btn-group">
        <button type="button" class="btn btn-default" {{action 'cosulMeu'}}><span class="glyphicon glyphicon-shopping-cart"></span> <span>Cosul meu<br>
        
        {{#if counter}}
          <strong>{{total}} Lei </strong><span class="badge">{{counter}}</span>
        {{else}}
          <strong>Nu ai produse</strong>
        {{/if}}
        </span>
        </button>
      </div>
  </div>

{{else}}
  <div id="buttons">
    <div class="btn-group btn-xl btn-group-justified">
      <div class="btn-group">
        <button type="button" class="btn btn-default" {{action 'login'}}><span class="glyphicon glyphicon-user"></span><span> Bine ai venit,<br><strong>Contul meu</strong></span> </button>
      </div>
      <div class="btn-group">
        <button type="button" class="btn btn-default" {{action 'cosulMeu'}}><span class="glyphicon glyphicon-shopping-cart"></span> <span>Cosul meu<br>
        
        {{#if counter}}
          <strong>{{total}} Lei </strong><span class="badge">{{counter}}</span>
        {{else}}
          <strong>Nu ai produse</strong>
        {{/if}}
        </span>
        </button>
      </div>
    </div>
  </div><!--buttons-->
{{/if}}
</div>